{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Blipty",
  "version": "1.0.0",
  "identifier": "net.blipty.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "Blipty",
        "width": 1280,
        "height": 720,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "Info.plist"
    ],
    "iOS": {
      "developmentTeam": "XXXXXXXXXX"
    }
  }
}
